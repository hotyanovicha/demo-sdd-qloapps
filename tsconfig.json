{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@pages/*": [
        "src/ui/pages/*"
      ],
      "@fixtures/*": [
        "src/ui/fixtures/*"
      ],
      "@constants/*": [
        "src/ui/test-data/constants/*"
      ],
      "@types-ui/*": [
        "src/ui/types/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}