{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["src/ui/pages/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@constants/*": ["src/ui/test-data/constants/*"],
      "@types-ui/*": ["src/ui/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
